<h2>Update the drone</h2>

<form action="/drones/{{_id}}/edit" method="post">

  <label for="name-input">Name:</label>
  <input type="text" name="name" id="name" value="{{name}}"/>

  <label for="propellers-input">Propellers:</label>
  <input type="text" name="propellers" id="propellers" value="{{propellers}}"/>

  <label for="maxSpeed-input">MaxSpeed:</label>
  <input name="description" id="maxSpeed" value="{{maxSpeed}}"/> 

  <button type="submit">Update</button>

</form>